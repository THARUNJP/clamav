{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicy": {
      "type": "ALWAYS",
      "maximumRetryCount": 3
    },
    "resources": {
      "memory": 4096,
      "cpu": 2
    }
  },
  "volumes": [
    {
      "name": "clamav_db",
      "mountPath": "/var/lib/clamav",
      "persist": true
    }
  ]
}